<section class="form-group {{ ccss }}">
    {% if label %}
        <label for="{{ id }}">{{ label }}</label>
    {% endif %}

    <select id="{{ id }}" class="form-control {{ css }}" name="{{ name }}">
        {% for value in options %}
        <option value="{{ key }}"{% if value.selected %} selected{% endif %}>{{ value.title }}</option>
        {% endfor %}
    </select>

    {% if error %}
        <em for="{{ name }}" class="invalid">{{ error }}</em>
    {% endif %}
</section>